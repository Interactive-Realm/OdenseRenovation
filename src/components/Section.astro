---
interface Props {
  id?: string;
  type?: "light" | "dark" | "gray" | "primary" | "primary-variant";
  background?: {
    src: string;
    alt: string;
  };
}

const { id, type = "light", background } = Astro.props;
---

<section id={id} class={type}>
  {
    background && (
      <img
        class="section__background"
        src={background.src}
        alt={background.alt}
      />
    )
  }
  <div class="section__content wrapper">
    <slot />
  </div>
</section>

<style>
  section {
    position: relative;
  }

  .section__background {
    filter: brightness(80%);
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    inset: 0;
    z-index: 10;
  }

  .section__content {
    z-index: 20;
    position: relative;
  }
</style>
